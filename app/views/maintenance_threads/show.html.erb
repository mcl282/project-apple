<h1>MaintenanceThreads#show</h1>
<p>Find me in app/views/maintenance_threads/show.html.erb</p>

<% @maintenance_threads.each do |thread| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= "#{@tenant.email} submitted #{thread.created_at.strftime("%B %e, %Y at %I:%M %p")}" %></h3>
    </div>
    <div class="panel-body">
      <%= thread.maintenance_thread_title %><br>
      <% @maintenance_requests.where(maintenance_thread_id: thread.id).each do |rqst|%>
        <%= rqst.request_message %>
      <% end %>
    </div>
  </div>
<% end %>