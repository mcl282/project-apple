<% provide(:title, @property.property_name) %>

<div class="row">
  <h1><%= @property.property_name %></h1>
</div>

<div class = "row">
  <div class = "col-md-10">
    <%= render 'single_family_new_property_form' %>  
  </div>

  <div class = "col-md-2">
    <% @photos.each do |photo| %>
      <%= image_tag(photo.photo_file_name.url, size: "64")  %>
    <%end%>
  </div>

</div>

  

<br/>

<div class="row">
  <%= link_to "Click here to add a unit", new_property_unit_path(@property.id)%>
</div>

<div class="row">
  <table class="table table-hover">
  <tr>
    <th>Unit Number</th>
  </tr>
    <% @units.each do |unit| %>    
  <tr>
    <td><p><%= link_to "#{unit.unit_label}", edit_unit_path(unit.id) %></p></td>
  </tr>
    <% end %>
</table>
</div>